<p>
  <strong>画像:</strong>
  <%= image_tag @picture.image %>
</p>

<p>
  <strong>コメント:</strong>
  <%= @picture.content %>
</p>

  <% unless @picture.user == current_user %>
    <% if @favorite.present? %>
      <%= link_to '食べたい！を解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to '食べたい！', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>

<%= link_to '編集する', edit_picture_path(@picture) %> |
<%= link_to '一覧に戻る', pictures_path %>
